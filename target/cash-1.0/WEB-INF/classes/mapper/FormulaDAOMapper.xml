<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.FormulaDAO">

    <insert id="save" parameterType="com.sucheng.dos.FormulaDO">
        insert into t_formula
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="unit != null">
				unit,
			</if>
			<if test="proId != null">
				pro_id,
			</if>
			<if test="descript != null">
				descript,
			</if>
			<if test="status != null">
				status,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="unit != null">
				#{unit},
			</if>
			<if test="proId != null">
				#{proId},
			</if>
			<if test="descript != null">
				#{descript},
			</if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.FormulaDO">
        delete from t_formula where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_formula where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_formula where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.FormulaDO">
        update t_formula
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="unit != null">
				unit = #{unit},
			</if>
			<if test="proId != null">
				pro_id = #{proId},
			</if>
			<if test="descript != null">
				descript = #{descript},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_formula set is_active = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, name, unit, pro_id, descript, status, created_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.FormulaDO">
        select
        <include refid="select_columns"/>
        from t_formula where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.FormulaDO">
        select
        <include refid="select_columns"/>
        from t_formula
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.FormulaDO">
        select
        <include refid="select_columns"/>
        from t_formula
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_formula
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{id},
		</if>
		<if test="query != null and query.name != null and query.name != ''">
			and name = #{name},
		</if>
		<if test="query != null and query.unit != null and query.unit != ''">
			and unit = #{unit},
		</if>
		<if test="query != null and query.proId != null">
			and pro_id = #{proId},
		</if>
		<if test="query != null and query.descript != null and query.descript != ''">
			and descript = #{descript},
		</if>
		<if test="query != null and query.status != null and query.status != ''">
			and status = #{status},
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{createdTime},
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.dos.FormulaDO">
        select
        <include refid="select_columns"/>
        from t_formula
        <where>
            <include refid="where_clause"/>
        </where>
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.FormulaQuery" resultType="long">
        select count(*) from t_formula
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
