<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.StockDAO">

    <insert id="save" parameterType="com.sucheng.dos.StockDO">
        insert into t_stock
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="rawId != null">
				raw_id,
			</if>
			<if test="type != null">
				type,
			</if>
			<if test="count != null">
				count,
			</if>
			<if test="unit != null">
				unit,
			</if>
			<if test="price != null">
				price,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="rawId != null">
				#{rawId},
			</if>
			<if test="type != null">
				#{type},
			</if>
			<if test="count != null">
				#{count},
			</if>
			<if test="unit != null">
				#{unit},
			</if>
			<if test="price != null">
				#{price},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.StockDO">
        delete from t_stock where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_stock where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_stock where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.StockDO">
        update t_stock
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="rawId != null">
				raw_id = #{rawId},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
			<if test="count != null">
				count = #{count},
			</if>
			<if test="unit != null">
				unit = #{unit},
			</if>
			<if test="price != null">
				price = #{price},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_stock set is_active = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, raw_id, type, count, unit, price, created_time, update_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.StockDO">
        select
        <include refid="select_columns"/>
        from t_stock where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.StockDO">
        select
        <include refid="select_columns"/>
        from t_stock
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.StockDO">
        select
        <include refid="select_columns"/>
        from t_stock
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_stock
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{id},
		</if>
		<if test="query != null and query.rawId != null">
			and raw_id = #{rawId},
		</if>
		<if test="query != null and query.type != null and query.type != ''">
			and type = #{type},
		</if>
		<if test="query != null and query.count != null">
			and count = #{count},
		</if>
		<if test="query != null and query.unit != null and query.unit != ''">
			and unit = #{unit},
		</if>
		<if test="query != null and query.price != null">
			and price = #{price},
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{createdTime},
		</if>
		<if test="query != null and query.updateTime != null">
			and update_time = #{updateTime},
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.dos.StockDO">
        select
        <include refid="select_columns"/>
        from t_stock
        <where>
            <include refid="where_clause"/>
        </where>
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.StockQuery" resultType="long">
        select count(*) from t_stock
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
