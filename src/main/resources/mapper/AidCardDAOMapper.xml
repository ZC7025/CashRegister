<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.AidCardDAO">

    <insert id="save" parameterType="com.sucheng.dos.AidCardDO">
        insert into t_aid_card
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="cardNo != null">
				card_no,
			</if>
			<if test="vipId != null">
				vip_id,
			</if>
			<if test="money != null">
				money,
			</if>
			<if test="status != null">
				status,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="cardNo != null">
				#{cardNo},
			</if>
			<if test="vipId != null">
				#{vipId},
			</if>
			<if test="money != null">
				#{money},
			</if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.AidCardDO">
        delete from t_aid_card where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_aid_card where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_aid_card where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.AidCardDO">
        update t_aid_card
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="cardNo != null">
				card_no = #{cardNo},
			</if>
			<if test="vipId != null">
				vip_id = #{vipId},
			</if>
			<if test="money != null">
				money = #{money},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_aid_card set status = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, card_no, vip_id, money, status, created_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.AidCardDO">
        select
        <include refid="select_columns"/>
        from t_aid_card where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.AidCardDO">
        select
        <include refid="select_columns"/>
        from t_aid_card
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.AidCardDO">
        select
        <include refid="select_columns"/>
        from t_aid_card
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_aid_card
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{id},
		</if>
		<if test="query != null and query.cardNo != null and query.cardNo != ''">
			and card_no = #{cardNo},
		</if>
		<if test="query != null and query.vipId != null">
			and vip_id = #{vipId},
		</if>
		<if test="query != null and query.money != null">
			and money = #{money},
		</if>
		<if test="query != null and query.status != null and query.status != ''">
			and status = #{status},
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{createdTime},
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.dos.AidCardDO">
        select
        <include refid="select_columns"/>
        from t_aid_card
        <where>
            <include refid="where_clause"/>
        </where>
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.AidCardQuery" resultType="long">
        select count(*) from t_aid_card
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
