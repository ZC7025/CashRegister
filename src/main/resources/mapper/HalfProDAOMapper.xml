<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.HalfProDAO">

    <insert id="save" parameterType="com.sucheng.dos.HalfProDO">
        insert into t_half_pro
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="count != null">
				count,
			</if>
			<if test="unitId != null">
				unit_id,
			</if>
            <if test="storeId != null">
                store_id,
            </if>
			<if test="status != null">
				status,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="count != null">
				#{count},
			</if>
			<if test="unitId != null">
				#{unitId},
			</if>
            <if test="storeId != null">
                #{storeId},
            </if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.HalfProDO">
        delete from t_half_pro where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_half_pro where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_half_pro where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.HalfProDO">
        update t_half_pro
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="count != null">
				count = #{count},
			</if>
			<if test="unitId != null">
				unit_id = #{unitId},
			</if>
            <if test="storeId != null">
                store_id = #{storeId},
            </if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_half_pro set status = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, name, count, unit_id, store_id, status, created_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.HalfProDO">
        select
        <include refid="select_columns"/>
        from t_half_pro where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.HalfProDO">
        select
        <include refid="select_columns"/>
        from t_half_pro
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.HalfProDO">
        select
        <include refid="select_columns"/>
        from t_half_pro
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_half_pro
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{query.id}
		</if>
		<if test="query != null and query.name != null and query.name != ''">
			and name = #{query.name}
		</if>
		<if test="query != null and query.count != null">
			and count = #{query.count}
		</if>
		<if test="query != null and query.unitId != null and query.unitId != ''">
			and unit_id = #{query.unitId}
		</if>
        <if test="query != null and query.storeId != null and query.storeId != ''">
            and store_id = #{query.storeId}
        </if>
		<if test="query != null and query.status != null and query.status != ''">
			and status = #{query.status}
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{query.createdTime}
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.query.HalfProQuery">
        select hp.*, u.unit from t_half_pro hp, t_unit u
        <where>
            <if test="true">
                and hp.unit_id = u.id
            </if>
            <if test="query != null and query.storeId != null">
                and hp.store_id = #{query.storeId}
            </if>
        </where>
        order by hp.created_time desc
        limit #{pager.beginIndex}, #{pager.pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.HalfProQuery" resultType="long">
        select count(*) from t_half_pro
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
