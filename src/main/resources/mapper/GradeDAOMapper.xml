<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.GradeDAO">

    <insert id="save" parameterType="com.sucheng.dos.GradeDO">
        insert into t_grade
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="gradeName != null">
				grade_name,
			</if>
			<if test="seat != null">
				seat,
			</if>
			<if test="storeId != null">
				store_id,
			</if>
			<if test="status != null">
				status,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="gradeName != null">
				#{gradeName},
			</if>
			<if test="seat != null">
				#{seat},
			</if>
			<if test="storeId != null">
				#{storeId},
			</if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.GradeDO">
        delete from t_grade where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_grade where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_grade where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.GradeDO">
        update t_grade
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="gradeName != null">
				grade_name = #{gradeName},
			</if>
			<if test="seat != null">
				seat = #{seat},
			</if>
			<if test="storeId != null">
				store_id = #{storeId},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_grade set is_active = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, grade_name, seat, store_id, status, created_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.GradeDO">
        select
        <include refid="select_columns"/>
        from t_grade where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.GradeDO">
        select
        <include refid="select_columns"/>
        from t_grade
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.GradeDO">
        select
        <include refid="select_columns"/>
        from t_grade
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_grade
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{query.id}
		</if>
		<if test="query != null and query.gradeName != null and query.gradeName != ''">
			and grade_name = #{query.gradeName}
		</if>
		<if test="query != null and query.seat != null">
			and seat = #{query.seat}
		</if>
		<if test="query != null and query.storeId != null">
			and store_id = #{query.storeId}
		</if>
		<if test="query != null and query.status != null and query.status != ''">
			and status = #{query.status}
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{query.createdTime}
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.dos.GradeDO">
        select
        <include refid="select_columns"/>
        from t_grade
        <where>
            <include refid="where_clause"/>
        </where>
        order by created_time desc
        limit #{pager.beginIndex}, #{pager.pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.GradeQuery" resultType="long">
        select count(*) from t_grade
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
