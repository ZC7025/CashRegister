<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sucheng.dao.TasteDAO">

    <insert id="save" parameterType="com.sucheng.dos.TasteDO">
        insert into t_taste
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
				id,
			</if>
			<if test="taste != null">
				taste,
			</if>
			<if test="descript != null">
				descript,
			</if>
            <if test="storeId != null">
                store_id,
            </if>
			<if test="status != null">
				status,
			</if>
			<if test="createdTime != null">
				created_time,
			</if>
			
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
				#{id},
			</if>
			<if test="taste != null">
				#{taste},
			</if>
			<if test="descript != null">
				#{descript},
			</if>
            <if test="storeId != null">
                #{storeId},
            </if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createdTime != null">
				#{createdTime},
			</if>
			
        </trim>
    </insert>

    <delete id="remove" parameterType="com.sucheng.dos.TasteDO">
        delete from t_taste where id = #{id}
    </delete>

    <delete id="removeById" parameterType="long">
        delete from t_taste where id = #{id}
    </delete>

    <delete id="removeByIds">
        delete from t_taste where id in
        <foreach item="id" collection="array" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="com.sucheng.dos.TasteDO">
        update t_taste
        <set>
            <if test="id != null">
				id = #{id},
			</if>
			<if test="taste != null">
				taste = #{taste},
			</if>
			<if test="descript != null">
				descript = #{descript},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="createdTime != null">
				created_time = #{createdTime},
			</if>
			
        </set>
        where id = #{id}
    </update>

    <update id="updateActiveStatus" parameterType="com.sucheng.query.StatusQuery">
        update t_taste set status = #{status} where id = #{id}
    </update>

    <sql id="select_columns">
        id, taste, descript, store_id, status, created_time
    </sql>

    <select id="getById" parameterType="long" resultType="com.sucheng.dos.TasteDO">
        select
        <include refid="select_columns"/>
        from t_taste where id = #{id}
    </select>

    <select id="listAll" resultType="com.sucheng.dos.TasteDO">
        select
        <include refid="select_columns"/>
        from t_taste
        order by created_time desc
    </select>

    <select id="listPage" parameterType="com.sucheng.query.PageQuery" resultType="com.sucheng.dos.TasteDO">
        select
        <include refid="select_columns"/>
        from t_taste
        order by created_time desc
        limit #{beginIndex}, #{pageSize}
    </select>

    <select id="count" resultType="long">
        select count(*) from t_taste
    </select>

    <sql id="where_clause">
        <if test="query != null and query.id != null">
			id = #{query.id}
		</if>
		<if test="query != null and query.taste != null and query.taste != ''">
			and taste = #{query.taste}
		</if>
		<if test="query != null and query.descript != null and query.descript != ''">
			and descript = #{query.descript}
		</if>
        <if test="query != null and query.storeId != null">
            and store_id = #{query.storeId}
        </if>
		<if test="query != null and query.status != null and query.status != ''">
			and status = #{query.status}
		</if>
		<if test="query != null and query.createdTime != null">
			and created_time = #{query.createdTime}
		</if>
		
    </sql>

    <select id="listPageByCondition" resultType="com.sucheng.query.TasteQuery">
        select
        <include refid="select_columns"/>
        from t_taste
        <where>
            <include refid="where_clause"/>
        </where>
        order by created_time desc
        limit #{pager.beginIndex}, #{pager.pageSize}
    </select>

    <select id="countByCondition" parameterType="com.sucheng.query.TasteQuery" resultType="long">
        select count(*) from t_taste
        <where>
            <include refid="where_clause"/>
        </where>
    </select>

</mapper>
